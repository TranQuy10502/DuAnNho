@model IEnumerable<WebDuAnNho.Models.Product>
@{
    
    var temp = new WebDuAnNho.Controllers.ProductController().GetCategories();
    ViewBag.DataProduct = temp.Result;
}
@if (@ViewBag.DataProduct  != null)
{
    foreach (var item in @ViewBag.DataProduct)
    {
        <!-- Product 1 -->
       
        <div class="product-item @item.ProductCategory.Alias">
            <div class="product discount product_filter">
                <div class="product_image">
                    <img class="imgproduct" data-id="@item.Id" src="@item.Image" alt="@item.Title">
                </div>
                <div class="favorite favorite_left"></div>
                @if (item.PriceSale > 0)
                {
                    <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>sale</span></div>
                }
               
                <div class="product_info">
                    <h6 class="product_name"><a href="/chi-tiet/@item.Alias-p@(item.Id)">@item.Title</a></h6>
                    @if (item.PriceSale > 0)
                    {
                        <div class="product_price">@WebDuAnNho.Models.Common.Common.FormatNumber(item.PriceSale, 0)<span>@WebDuAnNho.Models.Common.Common.FormatNumber(item.Price, 0)</span></div>

                    }
                    else
                    {
                        <div class="product_price">@WebDuAnNho.Models.Common.Common.FormatNumber(item.Price, 0)</div>
                    }
                </div>
            </div>
            <div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.Id">add to cart</a></div>
        </div>
    }
}
