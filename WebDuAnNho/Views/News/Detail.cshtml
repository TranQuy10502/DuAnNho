@model WebDuAnNho.Models.News

@{
    ViewData["Title"] = "Detail";
    var temp = new WebDuAnNho.Controllers.NewsController().GetCategories();
    ViewBag.DataNews = temp.Result;
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<!-- Slider -->
<style>
    .news_section_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="container news_section_container">
    @if (@ViewBag.DataNews != null)
    {
        <div class="row">
            <div class="col-md-12">
                <h1 class="title-news"> @ViewBag.DataNews.Title</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @ViewBag.DataNews .Description
            </div>
            <div class="col-md-12">
                @Html.Raw(ViewBag.DataNews.Detail)
            </div>
        </div>
    }

</div>


